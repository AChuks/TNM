<%= form_for(@video, html: { class: 'directUpload', data: { 'form-data' => (@s3_direct_post.fields), 'url' => @s3_direct_post.url, 'host' => URI.parse(@s3_direct_post.url).host } }) do |f| %>


  <% if @video.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@video.errors.count, 'error') %> prohibited this video from being saved:</h2>

      <ul>
      <% @video.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Your_Name, 'Your Name' %><br>
    <%= f.text_field :author %>
  </div>
  <br/>
  <div class="field">
    <%= f.label :title, 'Video Title' %><br>
    <%= f.text_field :title %>
  </div>
  <br/>
  <div class="field">
    <%= f.label :Description, 'Video Description' %><br>
    <%= f.text_area :description %>
  </div>
  <br/>
  <div class="field">
    <%= f.file_field :url, style: 'margin-left: 575px' %>
  </div>
  <br/>
  <br/>
  <div class="actions">
    <%= f.submit 'Submit Video' %>
  </div>
<% end %>
