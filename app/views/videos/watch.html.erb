<% provide(:title, 'Watch')%>

<div class = "container-fluid">
  <div>
    <br/>
    <div>
        <h4 style="float: left; color: #1d86b5;">&nbsp;Trending Now</h4>
    </div> 

    <div class = "well">
      <br/>
      <%= render partial: 'shared/carousel_videos',
        object: @trending_videos
      %>
    </div>
    <div class = "row">
      <div class = "col-sm-12">
        <div class = "col-sm-9">
          <div class = "well">
            <div class="row">
              <div id='playerxOMAufbyCsCE'></div>
              <script type='text/javascript'>
                jwplayer('playerxOMAufbyCsCE').setup({
                file: 'https://www.youtube.com/watch?v=<%= @url %>',
                image: 'https://i.ytimg.com/vi/<%= @url %>/mqdefault.jpg',
                width: '100%',
                aspectratio: '16:9',
                autostart: 'true'
                });
              </script>              
            </div>
          </div>

          <div class = "row">
            <div id="disqus_thread"></div>
            <script>
              (function() { // DON'T EDIT BELOW THIS LINE
              var d = document, s = d.createElement('script');
              s.src = '//tnm-1.disqus.com/embed.js';
              s.setAttribute('data-timestamp', +new Date());
              (d.head || d.body).appendChild(s);
              })();
            </script>
            <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a>
            </noscript>
          </div>
        </div>


        <div class = "col-sm-3">
          <div >
            <h4 style="float: left; color: #1d86b5;">&nbsp;Related Videos</h4>
          </div> 
          <div class = "well">
            <br/>
            <ul class="list-inline">
              <% @related_videos.each do |videotemplate| %>
              <li>
                <div class="hover-effect">
                  <div class="view view-first">
                    <div class="masked">
                      <a href = "watch?url=<%= videotemplate.url %>;title=<%= videotemplate.title %>;meta_data=<%= videotemplate.meta_data %>">
                        <img src = "https://i.ytimg.com/vi/<%= videotemplate.url %>/mqdefault.jpg">
                        <%= videotemplate.title %>
                        </br>
                        <%= videotemplate.date.to_date %>
                      </a>
                    </div>
                  </div>
                </div>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>