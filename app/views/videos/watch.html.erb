<% provide(:title, 'Watch')%>
<div class = "content">
  <div class='col-xs-12 content-videos content-videos-watch'>
    <div class='col-xs-12'>
      <div class='col-xs-9 col-zero-padding'>
        <div class = "col-xs-12 col-zero-padding">
          <div class='video-title-watch'><%= @title %></div>
          <div class='col-xs-12 col-zero-padding'>
            <video
            id="vid1"
            autoplay
            class="video-js vjs-default-skin featured-video"
            controls
            width="1200" height="700"
            data-setup='{ "techOrder": ["youtube", "html5"], "sources": [{ "type": "video/youtube", "src": "https://www.youtube.com/watch?v=<%= @url %>"}] }'
          >
          </video>
          </div>
        </div>
        <div id="disqus_thread" class='disqus-thread'></div>
        <script>
          (function() { // DON'T EDIT BELOW THIS LINE
          var d = document, s = d.createElement('script');
          s.src = '//supercomedian.disqus.com/embed.js';
            s.setAttribute('data-timestamp', +new Date());
            (d.head || d.body).appendChild(s);
            })();
        </script>
        <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a>
        </noscript>
      </div>
      <div class='col-xs-3 col-zero-padding'>
        <div class='content-videos-header content-videos-header-related'>RELATED VIDEOS</div>
        <section class="col-xs-12 content-videos-header-videos-section-related">
        <% @related_videos.each do |videotemplate| %>
          <section class="content-videos-header-videos-section-item">
            <div class="hover-effect">
              <div class="view view-first">
                <div class="masked">
                  <a href = "watch?url=<%= videotemplate.url %>;title=<%= videotemplate.title   %>;meta_data=<%= videotemplate.meta_data %>"> 
                    <img src = "https://i.ytimg.com/vi/<%= videotemplate.url %>/mqdefault.jpg" alt="<%= videotemplate.title %>">
                    <div class='video-title'><%= videotemplate.title %></div>
                    <div class='video-date-time'><%= videotemplate.date.to_date %></div>
                  </a>
                </div>
              </div>
            </div>
          </section>
        <% end %>
        </section>
      </div>
    </div>
  </div>
</div>