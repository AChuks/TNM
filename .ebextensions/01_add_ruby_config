option_settings:
  - option_name: BUNDLE_DISABLE_SHARED_GEMS
    value: "1"
  - option_name: BUNDLE_PATH
    value: "vendor/bundle"
 
packages:
  yum:
    git: []
    
container_commands:
  01_add_webpack:
    command: sudo yarn install --save-dev webpack
  02_install_compile:
    command: RAILS_ENV=production bundle exec rake assets:precompile